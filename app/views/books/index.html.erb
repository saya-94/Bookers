<h2 class="title-b-n">Books</h2>

<table>
	<thead>
		<tr>
			<th class="table-header">Title</th>
			<th class="table-header">Body</th>
			<th class="table-header" colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr class="table-row">
			<td ><%= book.title %></td>
			<td ><%= book.body %></td>
			<td ><%= link_to "Show", book_path(book.id) %></td>
			<td ><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
<% end %>

	</tbody>
</table>



<h3 class="title-b-n">New book</h3>
<!-- form_for部分 -->
<%= form_with model: Book.new do |f| %>

  <div class="form">
    <p class="newbook-title">Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="form">
    <p class="newbook-body">Body</p>
    <%= f.text_area :body %>
  </div>

  <div class="form">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>



